<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EcoTrack_Project.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EcoTrack_Project"
    Shell.FlyoutBehavior="Flyout"
    Title="EcoTrack_Project">


    <ShellContent Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}" Title="Dashboard" Icon="icon_home.png"/>
    <ShellContent Route="ActivityLog" ContentTemplate="{DataTemplate local:ActivityLog}" Title="Log Activity" Icon="icon_log.png"/>
    <ShellContent Route="TipsGoals" ContentTemplate="{DataTemplate local:TipsGoals}" Title="Tips and Goals" Icon="icon_tips.png"/>
    
</Shell>
